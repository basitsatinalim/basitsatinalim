@model basitsatinalimuyg.Dtos.RegisterDto

@{
	Layout = null;
}

<!DOCTYPE html>

<html>
<head>
	<meta name="viewport" content="width=device-width" />
	<title>Sign up</title>
	<link href="https://fonts.googleapis.com/css?family=Roboto:300,400,500,700&display=swap"
		  rel="stylesheet" />
	<script src="https://kit.fontawesome.com/9f68437b47.js" crossorigin="anonymous"></script>
	<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
	<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL" crossorigin="anonymous"></script>
	<style>
		* {
			font-family: 'Roboto', sans-serif;
		}
	</style>
</head>
<body>
	<div class="vh-100">
		<div class="container h-100">
			<div class="row d-flex justify-content-center align-items-center h-100">
				<div class="col-lg-12 col-xl-11">
					<div class="card text-black" style="border-radius: 25px;">
						<div class="card-body p-md-5">
							<div class="row justify-content-center">
								<div class="col-md-10 col-lg-6 col-xl-6 order-2 order-lg-1">

									<p class="text-center h1 fw-bold mb-5 mx-1 mx-md-4 mt-4">Sign up</p>

									<form asp-action="Register" method="post" class="mx-1 mx-md-4">
										<div asp-validation-summary="ModelOnly" class="text-danger"></div>
										<div class="d-flex flex-row align-items-center mb-4">
											<i class="fa-solid fa-user me-3 fa-lg"></i>
											<div class="d-flex flex-row align-items-center flex-fill gap-2">
												<div class="form-outline flex-fill">
													<input asp-for="Name" type="text" id="name" class="form-control" placeholder="Your Name" />
													<span asp-validation-for="Name" class="text-danger"></span>
												</div>
												<div class="form-outline flex-fill">
													<input type="text" asp-for="Surname" id="surname" class="form-control" placeholder="Your Surname" />
													<span asp-validation-for="Surname" class="text-danger"></span>
												</div>

											</div>
										</div>

										<div class="d-flex flex-row align-items-center mb-4">
											<i class="fa-solid fa-square-envelope fa-lg me-3"></i>
											<div class="form-outline flex-fill mb-0">
												<input asp-for="Email" type="email" id="email" class="form-control" placeholder="Your Email" />
												<span asp-validation-for="Email" class="text-danger"></span>
											</div>
										</div>

										<div class="d-flex flex-row align-items-center mb-4">
											<i class="fa-solid fa-lock fa-lg me-3"></i>
											<div class="d-flex flex-row align-items-center gap-2 flex-fill">
												<div class="form-outline flex-fill">
													<input asp-for="Password" type="password" id="form3Example1c" class="form-control" placeholder="Password" />
													<span asp-validation-for="Password" class="text-danger"></span>
												</div>
												<div class="form-outline flex-fill">
													<input asp-for="ConfirmPassword" type="password" id="form3Example1c" class="form-control" placeholder="Confirm Password" />
													<span asp-validation-for="ConfirmPassword" class="text-danger"></span>
												</div>
											</div>
										</div>

										<div class="d-flex flex-row align-items-center mb-4">
											<i class="fa-solid fa-cake-candles fa-lg me-3"></i>
											<div class="form-outline flex-fill mb-0">
												<input asp-for="BirthDate" type="date" id="birthdate" class="form-control" />
												<span asp-validation-for="BirthDate" class="text-danger"></span>
											</div>
										</div>

										<div class="d-flex flex-row w-100 justify-content-between align-items-center mb-4">
											<i class="fa-solid fa-venus-mars fa-lg me-2"></i>
											<div class="btn-group flex-fill">
												<input asp-for="Gender" type="radio" class="btn-check form-check-input" value=@true name="options" id="femaleGender" autocomplete="off" checked />
												<label class="btn form-check-label" for="femaleGender" style="color:#f8b9d4">Female</label>

												<input asp-for="Gender" type="radio" class="btn-check form-check-input" name="options" value=@false id="maleGender" autocomplete="off" />
												<label class="btn form-check-label" style="color:#001e3f;" for="maleGender">Male</label>
											</div>
										</div>


										<div class="d-flex justify-content-center mx-4 mb-3 mb-lg-4">
											<button value="Register" type="submit" class="btn w-100" style="color:white;background-color:#40d781">Register</button>
										</div>

									</form>

								</div>
								<div class="col-md-10 col-lg-6 col-xl-6 d-flex align-items-center order-1 order-lg-2">

									<img src="https://mdbcdn.b-cdn.net/img/Photos/new-templates/bootstrap-registration/draw1.webp"
										 class="img-fluid" alt="Sample image">

								</div>
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>

</body>
</html>
