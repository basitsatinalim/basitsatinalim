@model IEnumerable<basitsatinalimuyg.Models.ProductViewModel>

@{
	ViewData["Title"] = "Home Page";
}

<header class="bg-dark py-5" style="background-size:revert;  background-position: center center;  background-repeat:no-repeat; background-image:url('https://images.unsplash.com/photo-1475275083424-b4ff81625b60?q=80&w=1472&auto=format&fit=crop&ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D')">
