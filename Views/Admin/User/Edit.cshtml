@model basitsatinalimuyg.Entities.User
@using basitsatinalimuyg.Constants;

@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    ViewData["Title"] = "Edit";
}

<h1>Edit User</h1>

<hr />
<div class="row">
    <div class="col-md-12">
        <form asp-action="Edit" asp-controller="AdminUser" asp-route-id=@Model.Id method="post" class="mx-1 mx-md-4">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="d-flex flex-row align-items-center mb-4">
                <i class="fa-solid fa-user me-3 fa-lg"></i>
                <div class="d-flex flex-row align-items-center flex-fill gap-2">
                    <div class="form-outline flex-fill">
                        <input asp-for="Name" type="text" id="name" class="form-control" placeholder="Name" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                    <div class="form-outline flex-fill">
                        <input type="text" asp-for="Surname" id="surname" class="form-control" placeholder="Surname" />
                        <span asp-validation-for="Surname" class="text-danger"></span>
                    </div>

                </div>
            </div>

            <div class="d-flex flex-row align-items-center mb-4">
                <i class="fa-solid fa-square-envelope fa-lg me-3"></i>
                <div class="form-outline flex-fill mb-0">
                    <input asp-for="Email" type="email" id="email" class="form-control" placeholder="Email" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
            </div>
            <div class="d-flex flex-row align-items-center mb-4">

                <i class="fa-solid fa-phone fa-lg me-3"></i>
                <div class="form-outline flex-fill mb-0">
                    <input asp-for="Phone" type="tel" id="phone" class="form-control" placeholder="Phone" />
                    <span asp-validation-for="Phone" class="text-danger"></span>
                </div>
            </div>

            <div class="d-flex flex-row align-items-center mb-4">

                <i class="fa-regular fa-image fa-lg me-3"></i>
                <div class="form-outline flex-fill mb-0">
                    <input asp-for="ImageUrl" type="text" id="ImageUrl" class="form-control" placeholder="Image Url" />
                    <span asp-validation-for="ImageUrl" class="text-danger"></span>
                </div>
            </div>

            <div class="d-flex flex-row align-items-center mb-4">
                <i class="fa-solid fa-cake-candles fa-lg me-3"></i>
                <div class="form-outline flex-fill mb-0">
                    <input asp-for="BirthDate" type="date" id="birthdate" class="form-control" />
                    <span asp-validation-for="BirthDate" class="text-danger"></span>
                </div>

            </div>

            <div class="d-flex flex-row w-100 justify-content-between align-items-center mb-4">
                <i class="fa-solid fa-venus-mars fa-lg me-2"></i>
                <div class="btn-group flex-fill">
                    <input asp-for="Gender" type="radio" class="btn-check form-check-input" value=@true name="options"
                        id="femaleGender" autocomplete="off" checked />
                    <label class="btn form-check-label" for="femaleGender" style="color:#f8b9d4">Female</label>

                    <input asp-for="Gender" type="radio" class="btn-check form-check-input" name="options" value=@false
                        id="maleGender" autocomplete="off" />
                    <label class="btn form-check-label" style="color:#001e3f;" for="maleGender">Male</label>
                </div>
            </div>


            <div class="d-flex justify-content-center mx-4 mb-3 mb-lg-4">
                <button value="Update" type="submit" class="btn w-100 btn-lg btn-dark">Update</button>
            </div>

        </form>
    </div>
</div>
<script>
    (function () {
        'use strict'

        var forms = document.querySelectorAll('.needs-validation')
        Array.prototype.slice.call(forms)
            .forEach(function (form) {
                form.addEventListener('submit', function (event) {
                    if (!form.checkValidity()) {
                        event.preventDefault()
                        event.stopPropagation()
                    }

                    form.classList.add('was-validated')
                }, false)
            })
    })()
</script>
