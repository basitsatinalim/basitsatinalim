@model IEnumerable<basitsatinalimuyg.Entities.User>

@{
  Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h1 class="h3 mb-4 text-gray-800">Users</h1>
<div class="card shadow mb-4 ">
  <div class="card-header py-3">
    <h6 class="m-0 font-weight-bold text-primary">Users</h6>
  </div>
  <div class="card-body">
    <div class="table-responsive">
      <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
        <thead>
          <tr>
            <th>Id</th>
            <th>Name</th>
            <th>Surname</th>
            <th>Phone</th>
            <th>BirthDate</th>
            <th>Email</th>
            <th>Gender</th>
            <th>Role</th>
            <th>ImageUrl</th>
            <th>CreatedAt</th>
            <th>UpdatedAt</th>
            <th>Operation</th>
          </tr>
        </thead>
        <tbody>
          @foreach (var user in Model)
          {
            <tr>
              <td>@user.Id</td>
              <td>@user.Name</td>
              <td>@user.Surname</td>
              <td>@user.Phone</td>
              <td>@user.BirthDate</td>
              <td>@user.Email</td>
              <td>@user.Gender</td>
              <td>@user.Role</td>
              <td>@user.ImageUrl</td>
              <td>@user.CreatedAt</td>
              <td>@user.UpdatedAt</td>
              <td>
                <div class="d-flex align-items-center justify-content-center">
                  <div class="dropdown no-arrow">
                    <button class="dropdown-toggle w-100 cnt-shopping text-white" id="dropdownMenuLink"
                      data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                      <i class="fas fa-ellipsis-v fa-sm fa-fw text-gray-400"></i>
                    </button>
                    <div class="dropdown-menu dropdown-menu-right shadow animated--fade-in"
                      aria-labelledby="dropdownMenuLink">
                      <a class="dropdown-item" asp-action="Edit" asp-controller="AdminUser" asp-route-id="@user.Id">Edit
                        User</a>
                      <a class="dropdown-item" asp-controller="AdminUser" asp-action="Delete" asp-route-id="@user.Id"><i
                          class="fa-solid fa-ban me-2" style="color: #d02525;"></i>Delete User
                      </a>

                    </div>
                  </div>
                </div>
              </td>
            </tr>

          }
        </tbody>
      </table>
    </div>
  </div>
</div>