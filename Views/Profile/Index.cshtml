@model basitsatinalimuyg.Models.UserViewModel

@{
}


<div class="container-lg p-5">

  <div class="row">

    <div class="col-3">
      <partial name="Components/_ProfileSidebar" model="Model.Name" />
    </div>

    <div class="col-9">
      <section class="section_profile">
        <div class="card w-100 mb-3" style="background-color: #ff4911; border-radius:0; box-shadow: 8px 8px 0 0 #000;">
          <div class="card-header display-6 flex-fill d-flex w-100 align-items-center"
            style="border-bottom:none!important; height:80px">
            Account Information
          </div>
        </div>
        <div class="card" style="background-color: #fff; border-radius:0; box-shadow: 8px 8px 0 0 #000;">

          <div class="card-body">
            <form asp-action="Update" asp-controller="User" method="post" class="mx-1 mx-md-4">
              <div asp-validation-summary="ModelOnly" class="text-danger"></div>
              <div class="d-flex flex-row align-items-center mb-4">
                <i class="fa-solid fa-user me-3 fa-lg"></i>
                <div class="d-flex flex-row align-items-center flex-fill gap-2">
                  <div class="form-outline flex-fill">
                    <input asp-for="Name" type="text" id="name" class="form-control" placeholder="Your Name" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                  </div>
                  <div class="form-outline flex-fill">
                    <input type="text" asp-for="Surname" id="surname" class="form-control" placeholder="Your Surname" />
                    <span asp-validation-for="Surname" class="text-danger"></span>
                  </div>

                </div>
              </div>

              <div class="d-flex flex-row align-items-center mb-4">
                <i class="fa-solid fa-square-envelope fa-lg me-3"></i>
                <div class="form-outline flex-fill mb-0">
                  <input asp-for="Email" type="email" id="email" class="form-control" placeholder="Your Email" />
                  <span asp-validation-for="Email" class="text-danger"></span>
                </div>
              </div>
              <div class="d-flex flex-row align-items-center mb-4">

                <i class="fa-solid fa-phone fa-lg me-3"></i>
                <div class="form-outline flex-fill mb-0">
                  <input asp-for="Phone" type="tel" id="phone" class="form-control" placeholder="Your Phone" />
                  <span asp-validation-for="Phone" class="text-danger"></span>
                </div>
              </div>

              <div class="d-flex flex-row align-items-center mb-4">

                <i class="fa-regular fa-image fa-lg me-3"></i>
                <div class="form-outline flex-fill mb-0">
                  <input asp-for="ImageUrl" type="text" id="ImageUrl" class="form-control"
                    placeholder="Your Image Url" />
                  <span asp-validation-for="ImageUrl" class="text-danger"></span>
                </div>
              </div>

              <div class="d-flex flex-row align-items-center mb-4">
                <i class="fa-solid fa-cake-candles fa-lg me-3"></i>
                <div class="form-outline flex-fill mb-0">
                  <input asp-for="BirthDate" type="date" id="birthdate" class="form-control" />
                  <span asp-validation-for="BirthDate" class="text-danger"></span>
                </div>
              </div>

              <div class="d-flex flex-row w-100 justify-content-between align-items-center mb-4">
                <i class="fa-solid fa-venus-mars fa-lg me-2"></i>
                <div class="btn-group flex-fill">
                  <input asp-for="Gender" type="radio" class="btn-check form-check-input" value=@true name="Gender"
                    id="femaleGender" autocomplete="off" checked />
                  <label class="btn form-check-label" for="femaleGender" style="color:#f8b9d4">Female</label>

                  <input asp-for="Gender" type="radio" class="btn-check form-check-input" name="Gender" value=@false
                    id="maleGender" autocomplete="off" />
                  <label class="btn form-check-label" style="color:#001e3f;" for="maleGender">Male</label>
                </div>
              </div>


              <div class="d-flex justify-content-center mx-4 mb-3 mb-lg-4">
                <button value="Update" type="submit" class="btn w-100 btn-lg btn-dark">Update</button>
              </div>

            </form>
          </div>
        </div>
      </section>
    </div>
  </div>
</div>