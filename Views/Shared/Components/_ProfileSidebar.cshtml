@model string
@{
}
<style>
  .list-group-item {
    text-decoration: none;
    outline: none;
    border: none;
    border-radius: 8px !important;
  }

  .list-group-item.active {
    background-color: rgba(235, 192, 64, 0.2) !important;
  }

  .list-group-item:hover {
    background-color: rgba(235, 192, 64, 0.2) !important;
    transition: 0.3s ease-in-out;
  }
</style>
<section class="section_sidebar">
  <div class="card" style="background-color: #f1ece2">
    <div class="card-header">
      @Model's Account
    </div>
    <div class="card-body">
      <ul class="list-group gap-2" x-data>

        <a class="lead text-dark container list-group-item list-group-item-action bg-transparent"
          :class="window.location.pathname === '/Profile' ? 'active' : ''" style="text-decoration:none; border:none"
          asp-action="Index" asp-controller="Profile">
          <div class="row d-flex align-items-center justify-content-center">
            <i class="fa-solid fa-user col-2"></i>
            <div class="col-10">Profile</div>
          </div>
        </a>
        <a class="lead text-dark container list-group-item list-group-item-action bg-transparent"
          :class="window.location.pathname.includes('Order') ? 'active' : ''" style="text-decoration:none; border:none"
          asp-action="Order" asp-controller="Profile">
          <div class="row d-flex align-items-center justify-content-center">
            <i class="fa-solid fa-truck-ramp-box fa-xs col-2"></i>
            <div class="col-10">My Orders</div>
          </div>
        </a>

        <a class="lead text-dark container list-group-item list-group-item-action bg-transparent"
          :class="window.location.pathname.includes('Address') ? 'active' : ''"
          style="text-decoration:none; border:none" asp-action="Address" asp-controller="Profile">
          <div class="row d-flex align-items-center justify-content-center">
            <i class="fa-solid fa-location-dot col-2"></i>
            <div class="col-10">My Addresses</div>
          </div>
        </a>
      </ul>
    </div>
  </div>
</section>