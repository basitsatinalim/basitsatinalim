@using System.Text.Json;
@using basitsatinalimuyg.Constants;
@using System.Text.Json.Serialization;
@model basitsatinalimuyg.Models.ProductViewModel

@{
	var option = new JsonSerializerOptions
			{
				Converters = { new JsonStringEnumConverter(JsonNamingPolicy.CamelCase) }
			};

	var json = JsonSerializer.Serialize(Model, option);

}
<style>
	.card {
		transition: all 0.3s ease-in-out;
	}

	.card:hover {
		transform: scale(1.05);
	}

	.card-img-top {
		transition: all 0.3s ease-in-out;
	}

	.card:hover .card-img-top {
		transform: scale(1.1);
	}

	.card-img-top:hover {
		cursor: pointer;
	}

	.card-img-top:hover {
		cursor: pointer;
	}

	.card-img-top:hover .card-img-overlay {
		opacity: 1;
	}
</style>

<div class="col-md-6 col-lg-4 mb-4">
	<div class="card" style="height:auto; min-height:100%; border-radius:0px; border:none;">
		<div class="card-body d-flex row justify-content-center align-items-end">
			<figure class="text-center">
				<blockquote class="blockquote">
					<p class="text-uppercase pt-3 px-3 text-black lead">@Model.Name</p>
				</blockquote>
				<figcaption class="blockquote-footer">
					<span class="small"><a asp-controller="Product" asp-action="Index" asp-route-category=@Model.Category
							class="text-muted" style="text-decoration: none;">@Model.Category</a></span>
				</figcaption>
			</figure>
			<a asp-action="Details" asp-route-id=@Model.Id asp-controller="Product" asp-area="">
				<img src=@Model.ImageUrl class="card-img-top px-2" alt=@Model.Name style="width: 100%; height:250px;" />
			</a>

			<div class="d-flex justify-content-between mt-5 mb-3 align-items-center">

				<div class="d-flex ps-3">
					<p class="mb-0 my-0 lead text-black">@Model.Price?.Amount ₺</p>
				</div>
				<button x-data x-on:click="$store.userCart.add(@json)" type="button" class="btn btn-outline-dark w-50"
					style="border-radius:20px; outline: none !important; box-shadow: none;">Buy
					now</button>
			</div>


		</div>
	</div>
</div>
